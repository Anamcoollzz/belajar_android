<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/provinsi_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Provinsi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/provinsi_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Jawa Timur"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/positif_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Positif"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/provinsi_label" />

            <TextView
                android:id="@+id/positif_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/provinsi_text" />

            <TextView
                android:id="@+id/sembuh_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sembuh"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/positif_label" />

            <TextView
                android:id="@+id/sembuh_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/positif_text" />

            <TextView
                android:id="@+id/meninggal_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Meninggal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sembuh_label" />

            <TextView
                android:id="@+id/meninggal_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="30"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sembuh_text" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>